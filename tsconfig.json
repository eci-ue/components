{
  "compilerOptions": {
    "outDir": "build",
    "target": "ESNext",
    "declaration": true,
    "composite": true,
    "useDefineForClassFields": true,
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "resolveJsonModule": true,
    "isolatedModules": false,
    "esModuleInterop": true,
    "lib": ["ES5", "DOM"],
    "skipLibCheck": true,
    "noEmit": true,
    "experimentalDecorators": true,
    "paths": {
      "src/*": ["./src/*"],
      "test/*": ["./test/*"],
      "types/*": ["./types/*"]
    }
  },
  "include": [
    "src/**/*.ts", 
    "src/**/*.tsx",
    "src/**/*.vue",
    "test/**/*.ts",
    "test/**/*.tsx",
    "test/**/*.vue"
  ],
  "exclude": ["node_modules"]
}